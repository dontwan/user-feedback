{
  "kind": "collectionType",
  "collectionName": "comments",
  "info": {
    "name": "Comment"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "message": {
      "type": "richtext",
      "required": true
    },
    "item": {
      "model": "item",
      "via": "comments"
    },
    "children": {
      "collection": "comment",
      "via": "parent"
    },
    "parent": {
      "model": "comment",
      "via": "children"
    },
    "sticky": {
      "type": "boolean",
      "default": false
    },
    "private": {
      "type": "boolean",
      "default": false,
      "private": false
    }
  }
}
